<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.communityOnboarding.CommunityOnBoardingActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="communityOnBoardingViewModel"
            type="com.dailylocally.ui.communityOnboarding.CommunityOnBoardingActivityViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:src="@drawable/onboard_p2a" />


        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/onboard_p2b" />


        <com.dailylocally.utilities.fonts.quicksand.SubTitleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2"
            android:layout_centerHorizontal="true"
            android:text="DL Exclusive provides exclusive COD \nfacility for registered users."
            android:textAlignment="center"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_22px"
            android:textStyle="bold" />

        <com.dailylocally.utilities.fonts.quicksand.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-10dp"
            android:text="Enjoy Cash on \nDelivery on all \norders."
            android:textColor="@color/medium_black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>


</layout>
