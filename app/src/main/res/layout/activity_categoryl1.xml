        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <RelativeLayout
                android:onClick="@{()->categoryL1ViewModel.goBack()}"
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/loader"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_arrow_back_black_24dp" />


            </RelativeLayout>

            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                android:id="@+id/kitchen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="50dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{categoryL1ViewModel.title}"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/expandedImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/dl_primary_color"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_margin="5dp"
                    android:id="@+id/subcategories"
                    adapter="@{categoryL1ViewModel.categoryList}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

