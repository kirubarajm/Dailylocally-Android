<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="orderNowItemViewModel"
            type="com.dailylocally.ui.cart.OrderNowItemViewModel" />

    </data>

    <LinearLayout
        android:onClick="@{()->orderNowItemViewModel.itemClick()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">


            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                android:id="@+id/futureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@{orderNowItemViewModel.futureDate}"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:onClick="@{()->orderNowItemViewModel.changeDate()}"
                android:orientation="horizontal">


                <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Change date"
                    android:textAllCaps="true"
                    android:textColor="@color/dl_primary_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_date"
                    android:tint="@color/dl_primary_color" />


            </LinearLayout>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/medium_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:id="@+id/image"
                            imageUrl="@{orderNowItemViewModel.image}"
                            loader="@{loader}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter" />


                        <ImageView
                            android:id="@+id/loader"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:foregroundGravity="center"
                            android:scaleType="centerInside" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_toStartOf="@+id/delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                            android:id="@+id/kitchen_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@{orderNowItemViewModel.product_name}"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.dailylocally.utilities.fonts.poppins.ContentTextView
                            android:id="@+id/weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@{orderNowItemViewModel.weight}"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp">

                                <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:onClick="@{()->orderNowItemViewModel.subscribe()}"

                                    android:paddingTop="10dp"
                                    android:paddingEnd="15dp"
                                    android:paddingBottom="7dp"
                                    android:text="Subscribe"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/dl_primary_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>



            <ImageView
                android:onClick="@{()->orderNowItemViewModel.delete()}"
                android:foregroundGravity="center"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete"
                android:scaleType="centerInside" />

        </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/medium_gray" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:singleLine="true"
                        android:text="@{orderNowItemViewModel.sprice}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/addtocart_back">

                        <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:onClick="@{()->orderNowItemViewModel.enableAdd()}"
                            android:paddingTop="3dp"
                            android:text="@string/add"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/dl_primary_color"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="@{orderNowItemViewModel.isAddClicked?View.GONE:View.VISIBLE}" />

                        <RelativeLayout
                            android:id="@+id/num_picker"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="@{orderNowItemViewModel.isAddClicked?View.VISIBLE:View.GONE}">

                            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                                android:id="@+id/minus"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:onClick="@{()->orderNowItemViewModel.subClicked()}"
                                android:paddingTop="3dp"
                                android:text="@string/minus"
                                android:textAlignment="center"
                                android:textColor="@color/dl_primary_color"
                                android:textSize="18sp" />


                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/minus"
                                android:background="@color/dl_primary_color" />


                            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                                android:id="@+id/quan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingTop="3dp"
                                android:text="@{orderNowItemViewModel.sQuantity}"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@+id/plus"
                                android:background="@color/dl_primary_color" />


                            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                                android:id="@+id/plus"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:onClick="@{()->orderNowItemViewModel.addClicked()}"
                                android:paddingTop="3dp"
                                android:text="@string/plus"
                                android:textAlignment="center"
                                android:textColor="@color/dl_primary_color"
                                android:textSize="18sp" />

                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</layout>