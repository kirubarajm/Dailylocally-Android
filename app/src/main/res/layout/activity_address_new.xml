<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="addressNewViewModel"
            type="com.dailylocally.ui.address.addAddress.AddressNewViewModel" />

    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_arrow_back_black_24dp" />
            </RelativeLayout>

            <com.dailylocally.utilities.fonts.poppins.TitleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:text="@string/add_new_address"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/header">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="tag_map_fragment" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/centerMarker"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/back"
                android:src="@drawable/map_marker" />

        </FrameLayout>
    </FrameLayout>

    <ScrollView
        android:layout_below="@+id/frame"
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dailylocally.utilities.fonts.poppins.TitleTextView
                android:id="@+id/txt_address_title"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="@string/residency_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_below="@+id/txt_address_title"
            android:id="@+id/linear_address_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_apartment_individual"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/radio_1"
                            android:padding="10dp"
                            android:textSize="12sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:onClick="@{()->addressNewViewModel.apartment()}"
                            android:background="@drawable/address_bck"
                            android:text="@string/apartment_or_gated_society"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radio_2"
                            android:padding="10dp"
                            android:textSize="12sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:onClick="@{()->addressNewViewModel.individual()}"
                            android:background="@drawable/address_bck"
                            android:text="@string/individual_house"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_combine_address"
                android:layout_below="@+id/rel_apartment_individual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:visibility="@{addressNewViewModel.apartmentOrIndividual?View.VISIBLE:View.GONE}"
                    android:id="@+id/rel_apartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_text_input"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bck_editext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_apartment_name"
                            android:textSize="12sp"
                            android:padding="10dp"
                            android:imeOptions="actionNext"
                            android:background="@color/transparent"
                            android:hint="@string/apartment_society"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/name_text_input"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tower_text_input"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bck_editext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_tower_block"
                                android:textSize="12sp"
                                android:imeOptions="actionNext"
                                android:padding="10dp"
                                android:background="@color/transparent"
                                android:hint="@string/tower_block"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/flatNo_text_input"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bck_editext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_flat_house_no"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:imeOptions="actionNext"
                                android:background="@color/transparent"
                                android:hint="@string/house_flat_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="@{addressNewViewModel.apartmentOrIndividual?View.GONE:View.VISIBLE}"
                    android:id="@+id/rel_individual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linear_house"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/house_plot_no_text_input"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bck_editext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_house_plot_no"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:imeOptions="actionNext"
                                android:background="@color/transparent"
                                android:hint="@string/house_no_plot_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/floor_text_input"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/bck_editext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_floor"
                                android:textSize="12sp"
                                android:padding="10dp"
                                android:imeOptions="actionNext"
                                android:background="@color/transparent"
                                android:hint="@string/floor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_text_input"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rel_combine_address"
                android:background="@drawable/bck_editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_address"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:imeOptions="actionNext"
                    android:background="@color/transparent"
                    android:hint="@string/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/landmark_text_input"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/address_text_input"
                android:background="@drawable/bck_editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_landmark"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:imeOptions="actionDone"
                    android:background="@color/transparent"
                    android:hint="@string/landmark_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/linear_address_type"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="@{()->addressNewViewModel.confirmClick()}"
            android:background="@drawable/curve_stroke">

            <com.dailylocally.utilities.fonts.poppins.ButtonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/confirm"
                android:textAllCaps="true"
                android:textColor="@color/dl_primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

</layout>