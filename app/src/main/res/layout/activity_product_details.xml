<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="productDetailsViewModel"
            type="com.dailylocally.ui.productDetail.ProductDetailsViewModel" />

    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:onClick="@{()->productDetailsViewModel.goBack()}"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_arrow_back_black_24dp" />
                </RelativeLayout>

                <com.dailylocally.utilities.fonts.poppins.TitleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Product Details"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                imageimageUrl="@{productDetailsViewModel.imageUrl}"
                android:adjustViewBounds="true"
                loader="@{loader}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/loader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:foregroundGravity="center" />

            <com.dailylocally.utilities.fonts.poppins.TitleTextView
                android:layout_below="@+id/image"
                android:layout_marginTop="40dp"
                android:textSize="14sp"
                android:id="@+id/txt_product"
                android:textStyle="bold"
                android:text="@{productDetailsViewModel.productname}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                android:layout_below="@+id/txt_product"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:id="@+id/txt_weight"
                android:text="@{productDetailsViewModel.unit}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                android:layout_below="@+id/txt_weight"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:id="@+id/txt_description"
                android:text="@{productDetailsViewModel.short_desc}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rel_1"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                    android:layout_alignParentStart="true"
                    android:text="@{productDetailsViewModel.mrp}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.dailylocally.utilities.fonts.poppins.ButtonTextView
                    android:layout_alignParentEnd="true"
                    android:text="Add"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curve_stroke_empty_green"
                    android:padding="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="40dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:layout_below="@+id/rel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dailylocally.utilities.fonts.poppins.ContentTextView
                    android:text="@{productDetailsViewModel.offer}"
                    android:textSize="12sp"
                    android:id="@+id/txt_offer"
                    android:textStyle="normal"
                    android:textColor="@color/dl_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.dailylocally.utilities.fonts.poppins.TitleTextView
                    android:text="@{productDetailsViewModel.offerCost}"
                    android:textSize="12sp"
                    android:id="@+id/txt_offer_percentage"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_offer"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <com.dailylocally.utilities.fonts.poppins.ContentTextView
                        android:text="Offers valid till 25th july,2020"
                        android:layout_below="@+id/txt_offer_percentage"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_offer_validity"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</layout>