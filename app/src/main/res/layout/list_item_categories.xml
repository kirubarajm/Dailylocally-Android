<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="categoriesItemViewModel"
            type="com.dailylocally.ui.home.CategoriesItemViewModel" />

    </data>
   <LinearLayout
       android:layout_marginStart="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/kitchen_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="@{()->categoriesItemViewModel.onItemClick()}"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image"
                imageimageUrl="@{categoriesItemViewModel.image}"
                loader="@{loader}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/loader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:foregroundGravity="center" />

            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                android:id="@+id/kitchen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{categoriesItemViewModel.name}"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>



    </LinearLayout>

</layout>