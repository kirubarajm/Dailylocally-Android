<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="communityViewModel"
            type="com.dailylocally.ui.joinCommunity.CommunityActivityViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_above="@+id/rel_buttons"
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_above="@+id/rel_buttons"
            android:id="@+id/rel_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:paddingTop="@dimen/_10px"
                            android:id="@+id/rel_back"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/transparent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_back"
                                android:layout_width="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="@{()->communityViewModel.goBack()}"
                                android:layout_height="20dp"
                                android:background="@color/transparent"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_arrow_back_black_24dp" />

                            <androidx.appcompat.widget.SearchView
                                android:id="@+id/search_community"
                                android:layout_width="match_parent"
                                android:visibility="@{communityViewModel.register?View.VISIBLE:View.GONE}"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:background="@color/white"
                                android:focusable="true"
                                app:iconifiedByDefault="false"
                                app:queryHint="Search here" />

                        </RelativeLayout>

                    </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="@{communityViewModel.joinExpandView?View.VISIBLE:View.GONE}"
                android:id="@+id/rel_join_community_expand_view"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="20dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                            android:id="@+id/txt_community_name"
                            android:text="Commanders court"
                            android:textSize="@dimen/_15px"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                            android:textSize="@dimen/_12px"
                            android:layout_below="@+id/txt_community_name"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/rel_2"
                            android:layout_below="@+id/txt_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                android:text="Residences"
                                android:id="@+id/txt_residences"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                android:id="@+id/txt_no_of_apartments"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                android:text="Status"
                                android:layout_marginTop="5dp"
                                android:id="@+id/txt_stat"
                                android:layout_below="@+id/txt_residences"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                android:id="@+id/txt_status"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/txt_no_of_apartments"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_complete_registration"
                android:visibility="@{communityViewModel.completeRegistration?View.VISIBLE:View.GONE}"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="15dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_registration"
                            android:onClick="@{()->communityViewModel.registerCommunityUploadImageClick()}"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/badge_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                            android:text="Upload profile photo"
                            android:layout_below="@+id/img_registration"
                            android:layout_marginTop="5dp"
                            android:id="@+id/txt_upload"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/linear_community_name"
                            android:layout_below="@+id/txt_upload"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="Community Name*"
                            android:id="@+id/edt_community_name"
                            android:textSize="@dimen/_15px"
                            android:layout_weight="1"
                            android:fontFamily="@font/quicksand_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_below="@+id/edt_community_name"
                                android:hint="No of Apartments"
                                android:layout_weight="1"
                                android:textSize="@dimen/_15px"
                                android:id="@+id/edt_no_of_apartments"
                                android:fontFamily="@font/quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/linear_1"
                            android:layout_below="@+id/linear_community_name"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_below="@+id/edt_community_name"
                                android:hint="House/Flat No.*"
                                android:layout_weight="1"
                                android:textSize="@dimen/_15px"
                                android:id="@+id/edt_house_flat_no"
                                android:fontFamily="@font/quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_below="@+id/edt_floor_no"
                                android:hint="Floor no*"
                                android:layout_weight="1"
                                android:textSize="@dimen/_15px"
                                android:id="@+id/edt_floor_no_re"
                                android:fontFamily="@font/quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_below="@+id/linear_1"
                            android:hint="Community Address*"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/edt_community_address"
                            android:textSize="@dimen/_15px"
                            android:fontFamily="@font/quicksand_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_join_the_community"
                android:visibility="@{communityViewModel.joinTheCommunity?View.VISIBLE:View.GONE}"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="10dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_join"
                            android:onClick="@{()->communityViewModel.joinCommunityUploadImageClick()}"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/badge_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                            android:text="Upload profile photo"
                            android:layout_below="@+id/img_join"
                            android:layout_marginTop="5dp"
                            android:id="@+id/txt_upload1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_below="@+id/txt_upload1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:hint="House Flat No.*"
                                android:id="@+id/edt_house"
                                android:layout_weight="1"
                                android:textSize="@dimen/_15px"
                                android:fontFamily="@font/quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputEditText
                                android:hint="Floor No*"
                                android:layout_weight="1"
                                android:id="@+id/edt_floor_no"
                                android:textSize="@dimen/_15px"
                                android:fontFamily="@font/quicksand_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:visibility="@{communityViewModel.register?View.VISIBLE:View.GONE}"
            android:id="@+id/recycler_community"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp"
            adapter="@{communityViewModel.communityItemViewModels}"
            tools:listitem="@layout/list_item_community"
            android:layout_above="@+id/rel_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rel_buttons"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dailylocally.utilities.fonts.quicksand.ButtonTextView
                android:text="Register Community"
                android:id="@+id/btn_register"
                android:onClick="@{()->communityViewModel.onRegistrationClick()}"
                android:layout_centerHorizontal="true"
                android:visibility="@{communityViewModel.register?View.VISIBLE:View.GONE}"
                style="@style/communityMediumGreenButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.dailylocally.utilities.fonts.quicksand.ButtonTextView
                android:text="Join Community"
                android:id="@+id/btn_join_comm"
                android:onClick="@{()->communityViewModel.joinClick()}"
                android:visibility="@{communityViewModel.joinExpandView?View.VISIBLE:View.GONE}"
                android:layout_centerHorizontal="true"
                style="@style/communityMediumGreenButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.dailylocally.utilities.fonts.quicksand.ButtonTextView
                android:text="Complete registration"
                android:id="@+id/btn_complete_reg"
                android:onClick="@{()->communityViewModel.completeRegistrationClick()}"
                android:visibility="@{communityViewModel.completeRegistration?View.VISIBLE:View.GONE}"
                android:layout_centerHorizontal="true"
                style="@style/communityMediumGreenButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.dailylocally.utilities.fonts.quicksand.ButtonTextView
                android:text="Join the community"
                android:id="@+id/btn_join_the_comm"
                android:onClick="@{()->communityViewModel.joinTheCommunityClick()}"
                android:visibility="@{communityViewModel.joinTheCommunity?View.VISIBLE:View.GONE}"
                android:layout_centerHorizontal="true"
                style="@style/communityMediumGreenButtonTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/transparent"
            android:id="@+id/rel_view_pager"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
