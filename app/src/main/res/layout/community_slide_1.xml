<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.communityOnboarding.CommunityOnBoardingActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="communityOnBoardingViewModel"
            type="com.dailylocally.ui.communityOnboarding.CommunityOnBoardingActivityViewModel" />
    </data>

<RelativeLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc1A1A1A">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_group_438"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.dailylocally.utilities.fonts.quicksand.ContentTextView
            android:layout_below="@+id/img_1"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12px"
            android:text="Join DL Exclusive to enjoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.dailylocally.utilities.fonts.quicksand.ContentTextView
            android:layout_below="@+id/txt_1"
            android:id="@+id/txt_2"
            android:textSize="@dimen/_12px"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="An All New Daily Locally Experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_minimum"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                    android:text="&#8226; "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                    android:id="@+id/txt_minimum_bskt_value"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12px"
                    android:layout_centerHorizontal="true"
                    android:text="0 minimum basket value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_free"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                    android:text="&#8226; "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                    android:id="@+id/txt_free_delivery"
                    android:textSize="@dimen/_12px"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="Free delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                    android:text="&#8226; "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                    android:layout_below="@+id/txt_free_delivery"
                    android:id="@+id/txt_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12px"
                    android:layout_centerHorizontal="true"
                    android:text="Cash on delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

</layout>
