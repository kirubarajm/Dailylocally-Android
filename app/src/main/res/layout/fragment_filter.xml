<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="filterViewModel"
            type="com.dailylocally.ui.category.l2.products.filter.FilterViewModel">

        </variable>
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                    android:layout_centerVertical="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="@{()->filterViewModel.clearAll()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textSize="12sp"
                    android:text="@string/clear_all"
                    android:textAllCaps="true"
                    android:background="@drawable/curve_stroke_gray"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold" />




                <com.dailylocally.utilities.fonts.poppins.TitleTextView
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Filter"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:tint="@color/dark_gray" />

            </RelativeLayout>



            <View
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/medium_gray"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >





                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="1dp"
                        android:id="@+id/recyclerview_filters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="250dp"
                        android:background="@android:color/white">
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <com.dailylocally.utilities.fonts.poppins.ButtonTextView
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{()->filterViewModel.apply()}"
            android:layout_below="@+id/top"
          android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/curve_stroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:text="@string/apply"
            android:textAllCaps="true"
            android:textColor="@color/dl_primary_color"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>

</layout>
