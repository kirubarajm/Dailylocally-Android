<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.onboarding.OnBoardingActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="onBoardingViewModel"
            type="com.dailylocally.ui.onboarding.OnBoardingActivityViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/onboard_3" />


        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <com.dailylocally.utilities.fonts.league.FooterTextView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="choose \nlocally"
                android:textColor="@color/medium_black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <com.dailylocally.utilities.fonts.quicksand.SubTitleTextView
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empower the local economy by directly ordering from local producers"
                android:textColor="@color/medium_black"
                android:textSize="@dimen/_18px" />

        </LinearLayout>




    </RelativeLayout>
</layout>