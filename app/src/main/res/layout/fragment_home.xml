<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeViewModel"
            type="com.dailylocally.ui.home.HomeViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/homemain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:cardElevation="1dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:onClick="@{()->homeViewModel.changeAddress()}"
                        android:orientation="horizontal">

                        <com.dailylocally.utilities.fonts.poppins.ContentTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivering to "
                            android:textColor="@color/medium_gray"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/delAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                            <com.dailylocally.utilities.fonts.poppins.TitleTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:singleLine="true"
                                android:text="@{homeViewModel.addressTitle}"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="25dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:rotation="90"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:textSize="16sp"
                                android:tint="@color/dl_primary_color" />


                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dl_logo" />


                <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/app_name"
                    android:textColor="@color/dl_primary_color"
                    android:textSize="16dp" />

            </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/fullScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:visibility="@{homeViewModel.fullEmpty?View.GONE:View.VISIBLE}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="@{()->homeViewModel.myOrders()}"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_orders"
                                android:textSize="20sp" />

                            <com.dailylocally.utilities.fonts.poppins.ButtonTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My orders"
                                android:textColor="@color/dl_primary_color"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.dailylocally.utilities.fonts.poppins.ContentTextView
                            android:id="@+id/welcomeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="12dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <com.dailylocally.utilities.fonts.poppins.ContentItalicTextView
                            android:id="@+id/welcomeTextNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="12dp"
                            android:text="@{homeViewModel.headerSubContent}"
                            android:textAlignment="textStart"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:visibility="visible" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/light_gray"
                            android:gravity="center_vertical|start"
                            android:hint="Search for fruits, vegetables and essentials"
                            android:onClick="@{()->homeViewModel.searchClick()}"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textAlignment="textStart"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoryList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <com.dailylocally.utilities.fonts.PromotionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Freshy"
                        android:textAlignment="center"
                        android:textColor="@color/medium_gray"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <com.dailylocally.utilities.fonts.PromotionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="locally"
                        android:textAlignment="center"
                        android:textColor="@color/medium_gray"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <com.dailylocally.utilities.fonts.PromotionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="daily."
                        android:textAlignment="center"
                        android:textColor="@color/light_green"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <com.dailylocally.utilities.fonts.poppins.ContentTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Locally sourced product"
                        android:textAlignment="center"
                        android:textColor="@color/medium_gray"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/dl_primary_color"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="@{homeViewModel.serviceable?View.GONE:View.VISIBLE}">


            <com.dailylocally.utilities.fonts.poppins.SubTitleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@{homeViewModel.unserviceableTitle}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.dailylocally.utilities.fonts.poppins.ContentTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@{homeViewModel.unserviceableSubTitle}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:visibility="@{homeViewModel.categoryLoading?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/loader"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                app:loading_color="@color/dl_primary_color"
                app:loading_width="5dp" />

        </RelativeLayout>
    </RelativeLayout>
</layout>