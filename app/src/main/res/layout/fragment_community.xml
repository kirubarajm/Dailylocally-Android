<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="communityViewModel"
            type="com.dailylocally.ui.community.CommunityViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">


            <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                style="@style/HeaderTitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Community" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:background="@color/gray"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_curve_stroke_white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="horizontal">


                            <com.dailylocally.utilities.CircularImageView
                                android:id="@+id/circleImage"
                                profileImage="@{communityViewModel.profilePic}"
                                android:layout_width="80dp"
                                android:src="@drawable/ic_group_482"
                                android:layout_height="80dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical">

                                <com.dailylocally.utilities.fonts.quicksand.SubTitleTextView
                                    style="@style/SubtTitleTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{communityViewModel.name}" />


                                <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                    style="@style/ContentTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@{communityViewModel.nameText}" />


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal"
                            android:weightSum="4">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <com.dailylocally.utilities.fonts.quicksand.SubTitleTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{communityViewModel.members}"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_22px" />


                                    <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                        style="@style/ContentTextStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{communityViewModel.membersText}" />


                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <com.dailylocally.utilities.fonts.quicksand.SubTitleTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{communityViewModel.communityName}"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_22px" />


                                    <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                        style="@style/ContentTextStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{communityViewModel.communityArea}" />


                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <com.dailylocally.utilities.fonts.quicksand.SubTitleTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{communityViewModel.credits}"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_22px" />


                                    <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                        style="@style/ContentTextStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{communityViewModel.creditsText}" />


                                </LinearLayout>


                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp">

                            <RelativeLayout
                                android:id="@+id/topConts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/ic_add_fav" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.dailylocally.utilities.CircularImageView
                                        imageUrl="@{communityViewModel.icon}"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="10dp" />


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="50dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:orientation="vertical">


                                            <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                                style="@style/HeaderTitleTextStyle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@{communityViewModel.postTitle}" />


                                            <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                                style="@style/ContentTextStyle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:text="@{communityViewModel.postDate}" />


                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>


                            <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                android:id="@+id/fullDes"
                                style="@style/ContentTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/topConts"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="@{communityViewModel.postDes}" />


                            <LinearLayout
                                android:id="@+id/images"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fullDes"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="@{communityViewModel.singleImage?View.GONE:View.VISIBLE}"
                                    android:weightSum="2">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            imageUrl="@{communityViewModel.image1}"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true" />

                                    </androidx.cardview.widget.CardView>


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            imageUrl="@{communityViewModel.image2}"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true" />

                                    </androidx.cardview.widget.CardView>


                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:visibility="@{communityViewModel.singleImage?View.VISIBLE:View.GONE}"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        imageUrl="@{communityViewModel.image1}"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <RelativeLayout
                                android:onClick="@{()->communityViewModel.actionBtClick()}"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_below="@+id/images"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/curve_stroke_rounded"
                                android:visibility="@{communityViewModel.showAction?View.VISIBLE:View.GONE}">

                                <RelativeLayout
                                    android:id="@+id/num_picker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@{communityViewModel.actionText}"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp" />


                                </RelativeLayout>


                            </RelativeLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="@{()->communityViewModel.communityEvent()}"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    imageUrl="@{communityViewModel.eventImageUrl}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </androidx.cardview.widget.CardView>
                            <!-- <LinearLayout
                                 android:layout_margin="10dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">


                                 <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                     style="@style/HeaderTitleTextStyle"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="@{communityViewModel.}" />


                                 <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                     style="@style/ContentTextStyle"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_marginTop="5dp"
                                     android:text="Hi, Welcome to the Daily Locally community Exclusive club " />


                             </LinearLayout>-->

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="@{()->communityViewModel.gotoCommunityCat()}"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    imageUrl="@{communityViewModel.catImageUrl}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </androidx.cardview.widget.CardView>
                            <!-- <LinearLayout
                                 android:layout_margin="10dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">


                                 <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                     style="@style/HeaderTitleTextStyle"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="@{communityViewModel.}" />


                                 <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                     style="@style/ContentTextStyle"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_marginTop="5dp"
                                     android:text="Hi, Welcome to the Daily Locally community Exclusive club " />


                             </LinearLayout>-->

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{()->communityViewModel.aboutUs()}"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true">


                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <LinearLayout
                                                android:id="@+id/aboutContent"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="10dp"
                                                android:orientation="vertical">


                                                <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@{communityViewModel.aboutUsTitle}"
                                                    android:textColor="@color/medium_black"
                                                    android:textSize="@dimen/_25px" />


                                                <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                                    style="@style/ContentTextStyle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="5dp"
                                                    android:text="@{communityViewModel.aboutUsDes}" />


                                            </LinearLayout>

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/aboutContent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_margin="10dp"
                                                android:adjustViewBounds="true"
                                                android:src="@drawable/ic_dl" />


                                        </RelativeLayout>

                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{()->communityViewModel.sneakPeak()}"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <LinearLayout
                                                android:id="@+id/sneakContent"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="10dp"
                                                android:orientation="vertical">


                                                <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@{communityViewModel.sneakTitle}"
                                                    android:textColor="@color/medium_black"
                                                    android:textSize="@dimen/_25px" />


                                                <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                                    style="@style/ContentTextStyle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="5dp"
                                                    android:text="@{communityViewModel.sneakDes}" />


                                            </LinearLayout>

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/sneakContent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_margin="10dp"
                                                android:adjustViewBounds="true"
                                                android:src="@drawable/ic_sneak_peak" />


                                        </RelativeLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>


                            <!-- <LinearLayout
                                 android:layout_margin="10dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">


                                 <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                     style="@style/HeaderTitleTextStyle"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="@{communityViewModel.}" />


                                 <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                     style="@style/ContentTextStyle"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_marginTop="5dp"
                                     android:text="Hi, Welcome to the Daily Locally community Exclusive club " />


                             </LinearLayout>-->

                        </RelativeLayout>


                        <RelativeLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:onClick="@{()->communityViewModel.whatsAppGroup()}"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/whatsContent"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="50dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_whatsapp" />

                                    <LinearLayout
                                        android:id="@+id/whatsContent"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:orientation="vertical">


                                        <com.dailylocally.utilities.fonts.quicksand.TitleTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{communityViewModel.whatsTitle}"
                                            android:textColor="@color/medium_black"
                                            android:textSize="@dimen/_25px" />


                                        <com.dailylocally.utilities.fonts.quicksand.ContentTextView
                                            style="@style/ContentTextStyle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="@{communityViewModel.whatsDes}" />


                                    </LinearLayout>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/postList"
                        postadapter="@{communityViewModel.getSocialActivities}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>





        <RelativeLayout
            android:visibility="@{communityViewModel.showVideo?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AB000000">


            <com.potyvideo.library.AndExoPlayerView
                android:layout_centerInParent="true"
                android:id="@+id/videoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />





            <ImageView
                android:onClick="@{()->communityViewModel.closeVideo()}"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentEnd="true"
                app:tint="@color/white" />



        </RelativeLayout>


    </RelativeLayout>
</layout>